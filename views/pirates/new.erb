<form action="/pirates" method="POST">

  <label for="pirate_name">Pirate Name:</label>
  <input type="text" id = "pirate_name" name="pirate[name]"></input>

  <label for="pirate_height">Pirate Height:</label>
  <input type="text" id = "pirate_height" name="pirate[height]"></input>

  <label for="pirate_weight">Pirate Weight:</label>
  <input type="text" id = "pirate_weight" name="pirate[weight]"></input>

  <label for="ship_name">Ship Number 1 Name:</label>
  <input id = "ship_name_1" type="text" name="pirate[ships][][name]"></input>

  <label for="ship_type">Ship Number 1 Type:</label>
  <input id = "ship_type_1" type="text" name="pirate[ships][][type]"></input>

  <label for="ship_booty">Ship Number 1 Booty:</label>
  <input id = "ship_booty_1" type="text" name="pirate[ships][][booty]"></input>

  <!-- our "repeated keys" allow sinatra to treat each object separately in the way we are building our params hash.
  the order really matters here. group your attributes by object to avoid erros (like we have in this example) -->

  <label for="ship_name">Ship Number 2 Name:</label>
  <input id = "ship_name_2" type="text" name="pirate[ships][][name]"></input>

  <label for="ship_type">Ship Number 2 Type:</label>
  <input id = "ship_type_2" type="text" name="pirate[ships][][type]"></input>

  <label for="ship_booty">Ship Number 2 Booty:</label>
  <input id = "ship_booty_2" type="text" name="pirate[ships][][booty]"></input>

  <input type="submit" value="Submit"></input>
</form>
